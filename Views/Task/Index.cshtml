@model IEnumerable<TaskItem>

<h2>Список задач</h2>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@(task.IsCompleted ? "Выполнено" : "В процессе")</td>
            </tr>
        }
    </tbody>
</table>